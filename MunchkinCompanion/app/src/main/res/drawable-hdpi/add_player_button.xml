<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#33110C" />
            <gradient android:angle="-90" android:startColor="#33110C" android:endColor="#963125"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#33110C" />
            <solid android:color="@color/munchkin_brown"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#33110C" />
            <gradient android:angle="-90" android:startColor="#963125" android:endColor="#571C15" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#33110C" />
            <gradient android:angle="-90" android:startColor="#aaa" android:endColor="#aaa" />
        </shape>
    </item>
</selector>