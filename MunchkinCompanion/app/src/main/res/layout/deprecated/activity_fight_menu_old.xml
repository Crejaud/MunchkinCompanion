<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:background="@drawable/blank_munchkin_fightmenu_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:id="@+id/textFightName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/textBaseLvlFight"
        android:numeric="integer"
        android:textSize="40dip"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@+id/imageBtnUp1Fight"
        android:layout_alignLeft="@+id/imageBtnUp1Fight"
        android:layout_alignStart="@+id/imageBtnUp1Fight" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnUp1Fight"
        android:background="@drawable/up_arrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnDown1Fight"
        android:background="@drawable/down_arrow"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level"
        android:id="@+id/textBaseFight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gear"
        android:id="@+id/textBonusFight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnUp2Fight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/up_arrow" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textBonusLvlFight"
        android:inputType="number"
        android:textSize="40dip"
        android:numeric="integer"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@+id/imageBtnUp2Fight"
        android:layout_alignLeft="@+id/imageBtnUp2Fight"
        android:layout_alignStart="@+id/imageBtnUp2Fight" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnDown2Fight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/down_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Strength"
        android:id="@+id/textTotalFight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/textTotalLvlFight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:numeric="integer"
        android:inputType="number"
        android:layout_marginTop="60dp"
        android:textSize="80dip"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="One-Shots"
        android:id="@+id/textOneShotFight"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textOneShotLvlFight"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="187dp"
        android:textSize="30dip" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageBtnRightFight"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/right_arrow"
        android:layout_marginTop="180dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageBtnLeftFight"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/left_arrow"
        android:layout_marginTop="180dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="110dp" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/textMonsterLvlFight"
        android:numeric="integer"
        android:textSize="40dip"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@+id/imageBtnUp3Fight"
        android:layout_alignLeft="@+id/imageBtnUp3Fight"
        android:layout_alignStart="@+id/imageBtnUp3Fight" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnUp3Fight"
        android:baselineAlignBottom="false"
        android:layout_toEndOf="@+id/textBaseLvlFight"
        android:background="@drawable/up_arrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="40dp"
        android:focusableInTouchMode="false"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnDown3Fight"
        android:scaleType="matrix"
        android:background="@drawable/down_arrow"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level"
        android:id="@+id/textMonsterFight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="280dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Modifier"
        android:id="@+id/textModifierFight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="280dp"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnUp4Fight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="330dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/up_arrow" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textModifierLvlFight"
        android:inputType="number"
        android:textSize="40dip"
        android:numeric="integer"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@+id/imageBtnUp4Fight"
        android:layout_alignLeft="@+id/imageBtnDown4Fight"
        android:layout_alignStart="@+id/imageBtnDown4Fight" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnDown4Fight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/down_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monster Strength"
        android:id="@+id/textMonsterTotalFight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/textMonsterTotalLvlFight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:numeric="integer"
        android:inputType="number"
        android:layout_marginTop="370dp"
        android:textSize="80dip"
        android:textColor="@android:color/black" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1053526407243665/2104562837" />

</RelativeLayout>