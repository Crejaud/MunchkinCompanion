<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:focusable="true"
    android:id="@+id/fragment_player"
    android:background="@drawable/peach_background">


    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/textBaseLvl"
        android:numeric="integer"
        android:textSize="40dip"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@+id/imageBtnUp1"
        android:layout_alignLeft="@+id/imageBtnUp1"
        android:layout_alignStart="@+id/imageBtnUp1" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnUp1"
        android:background="@drawable/up_arrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnDown1"
        android:background="@drawable/down_arrow"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level"
        android:id="@+id/textBase"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:textColor="@string/brown_text_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gear"
        android:id="@+id/textBonus"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnUp2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/up_arrow" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textBonusLvl"
        android:inputType="number"
        android:textSize="40dip"
        android:numeric="integer"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_below="@+id/imageBtnUp2"
        android:layout_alignLeft="@+id/imageBtnUp2"
        android:layout_alignStart="@+id/imageBtnUp2" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageBtnDown2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/down_arrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Strength"
        android:id="@+id/textTotal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/textTotalLvl"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:numeric="integer"
        android:inputType="number"
        android:layout_marginTop="310dp"
        android:textSize="120dip"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modifier"
        android:textColor="@string/brown_text_color"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="One-Shots"
        android:id="@+id/textOneShot"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/textOneShotLvl"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="187dp"
        android:textSize="30dip" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageBtnRight"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/right_arrow"
        android:layout_marginTop="180dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageBtnLeft"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/left_arrow"
        android:layout_marginTop="180dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="110dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Fight!  "
        android:id="@+id/btnFight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="310dp"
        android:background="@drawable/fight_menu_pic"
        android:layout_marginRight="17dp"
        android:gravity="right" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1053526407243665/2104562837" />

</RelativeLayout>